//https://onlinejudge.org/external/100/10025.pdf

#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n;
    cin >> n;
    bool flag=false;
    while(n--)
    {
        if(flag) cout << endl;
        flag=true;
        int num, s=0;
        cin >> num;
        for(int i=1;;i++)
        {
            s+=i;
            if(s>=abs(num) && (s-abs(num))%2==0) 
            {
                cout << i << endl;
                break;
            }
        }
    }
}
