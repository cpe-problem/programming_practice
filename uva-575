//https://onlinejudge.org/external/5/575.pdf

#include <bits/stdc++.h>
using namespace std;

int main()
{
    string s;
    while(cin >> s)
    {
        if(s[0]=='0') break;
        int sum=0, j=s.size();
        for(int i=0;i<s.size();i++)
        {
            sum=sum+(s[i]-'0')*(pow(2, j)-1);
            j--;
        }
        cout << sum << endl;
    }
}
