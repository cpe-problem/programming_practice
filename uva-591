//https://onlinejudge.org/external/5/591.pdf

#include <bits/stdc++.h>
using namespace std;

int main()
{
    int n, count=1;
    while(cin >> n, n)
    {
        cout << "Set #" << count++ << endl;
        int x[n], sum=0;
        for(int i=0;i<n;i++) 
        {    
            cin >> x[i];
            sum+=x[i];
        }
        int avg=sum/n, avg_sum=0;
        for(int i=0;i<n;i++){ 
            if(x[i]>avg) avg_sum+=(x[i]-avg);
        }
        cout << "The minimum number of moves is "<< avg_sum << ".\n" << endl;
    }
}
